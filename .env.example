# Backend Environment Configuration
# Copy this to .env and fill in the values

# Server
PORT=8080
GIN_MODE=debug  # debug, release, test

# Database
DATABASE_URL=postgres://postgres:password@localhost:5432/yandas?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=yandas

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=720h

# File Storage (S3 Compatible)
STORAGE_TYPE=local  # local, s3
STORAGE_PATH=./uploads
S3_BUCKET=yandas-uploads
S3_REGION=eu-central-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Admin
ADMIN_EMAIL=admin@yandas.app
ADMIN_PASSWORD=admin123  # Change in production!

# App URLs
APP_URL=https://yandas.app
WEB_URL=https://yandas.app
API_URL=https://api.yandas.app

# RevenueCat
REVENUECAT_API_KEY=your-revenuecat-api-key
